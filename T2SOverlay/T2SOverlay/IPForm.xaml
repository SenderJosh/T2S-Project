<Window x:Class="T2SOverlay.IPForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T2SOverlay"
        mc:Ignorable="d"
        Title="IPForm" Height="136.814" Width="517.469" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#FF181818">
        <StackPanel Orientation="Vertical" Margin="20,20,0,0">
            <Label Content="IP (leave blank for localhost connection)" Foreground="White"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="IPAddress" Background="#FF181818" Foreground="White" Width="300" Height="38" />
                <Button Content="Connect" Background="#FF181818" Foreground="#FFB9B9B9" FontSize="20"  Margin="10,0,0,0" Width="148" Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
